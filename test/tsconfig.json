{
    "compilerOptions": {
        "baseUrl": "src",
        "lib": ["ES2015", "DOM"],
        "module": "commonjs",
        "target": "es5",
        "rootDir": ".",
        "moduleResolution": "node",
        "allowUnreachableCode": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "sourceMap": true,
        "declaration": true,
        "types": ["node", "mocha"],
        "typeRoots": ["node_modules/@types"]
    },
    "exclude": ["node_modules"]
}
