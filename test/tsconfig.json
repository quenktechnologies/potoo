{
    "compilerOptions": {
        "baseUrl": "src",
        "lib": ["es5", "ES2015", "DOM"],
        "module": "commonjs",
        "target": "es6",
        "rootDir": ".",
        "moduleResolution": "node",
        "allowUnreachableCode": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "downlevelIteration": true,
        "declaration": true,
        "types": ["node", "mocha"],
        "typeRoots": ["node_modules/@types"]
    },
    "exclude": ["node_modules"]
}
